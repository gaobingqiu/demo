<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="50dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.signin.MainActivity" >

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:text="@string/welcome_tips"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/loginName"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/login_user"
        android:hint="@string/user_input" />

    <EditText
        android:id="@+id/tel"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/login_user"
        android:hint="@string/tel_input"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/code"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/msg"
            android:hint="@string/code_tips"
            android:inputType="number" />

        <Button
            android:id="@+id/fetchCode"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#00cc00"
            android:onClick="fetchCode"
            android:text="@string/code_button"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/login_pwd"
        android:hint="@string/pass_tips"
        android:inputType="textPassword" />

    <LinearLayout
        android:id="@+id/rem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <CheckBox
            android:id="@+id/check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#FFFFFF" />

        <TextView
            android:id="@+id/remenber"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/agree_tips" />
    </LinearLayout>

    <Button
        android:id="@+id/sumbitRegister"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#cc0000"
        android:onClick="sumbitRegister"
        android:text="@string/button_register"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/toLogin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#808080"
        android:contentDescription="@string/app_name"
        android:onClick="quickRegister"
        android:text="@string/button_quick_register"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/buttom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="15dp"
        android:text="@string/buttom_tips"
        android:textSize="20sp" />

</LinearLayout>